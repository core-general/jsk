<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>g-cluster-master</artifactId>
        <groupId>jsk</groupId>
        <version>jsk.17.6.34</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>g-cluster-master-core</artifactId>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>jsk</groupId>
            <artifactId>web-server-spring-jpa-core</artifactId>
            <version>jsk.17.6.34</version>
        </dependency>
        <dependency>
            <groupId>jsk</groupId>
            <artifactId>web-server-spark-spring-melody</artifactId>
            <version>jsk.17.6.34</version>
        </dependency>
        <dependency>
            <groupId>jsk</groupId>
            <artifactId>g-cluster-client</artifactId>
            <version>jsk.17.6.34</version>
        </dependency>
        <dependency>
            <groupId>jsk</groupId>
            <artifactId>jx-system-info</artifactId>
            <version>jsk.17.6.34</version>
        </dependency>
        <dependency>
            <groupId>jsk</groupId>
            <artifactId>relational-mig</artifactId>
            <version>jsk.17.6.34</version>
        </dependency>
        <dependency>
            <groupId>jsk</groupId>
            <artifactId>jx-test-with-services</artifactId>
            <version>jsk.17.6.34</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.mysema.maven</groupId>
                <artifactId>apt-maven-plugin</artifactId>
                <version>1.1.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>process</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>target/generated-sources/java</outputDirectory>
                            <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.querydsl</groupId>
                        <artifactId>querydsl-apt</artifactId>
                        <version>4.0.9</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>